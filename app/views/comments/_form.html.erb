<%= form_for([@post,@post.comments.build]) do |f| %>
	<% if !@current_user.nil? %> 
	<%= f.hidden_field :user_id,value:@current_user.id %>
	<% end %>
	<div class="form-inline">
	<%= f.text_area :content ,placeholder: "댓글을 달아주세요", class:"form-control"%>
	
	<%= f.submit "댓글달기", class: "btn btn-default " %>
	</div>
<% end %>
