<div class="container">
	<% if !flash[:alert].nil? %>
		<div class="alert alert-danger">
		<%= flash[:alert] %>
		</div>
	<% end %>
	<h2 class="text-center">음식 정보 보기</h2>
	<div class="row">
		<div class="col-md-1">
		</div>
		<div class="col-md-5 text-right">
			<img src="<%= @post.image_url(:medium) %>">
		</div>
		<div class="col-md-5">
			<h3>+<%= @post.title %></h3>
			<p><span class="label label-warning"><%= @post.category %></span></p>
			<p>평점: <%= @rate_average %> (<%= @rate.count %>명 참여) </p><span><%= render 'rates/form' %></span>
			<p>내용: <%= @post.content %></p>
			<p><%= link_to '수정하기', edit_post_path(@post) %> | <%= link_to '삭제하기', post_path(@post), :method => :delete, data: {confirm: '삭제하시겠습니까?'} %></p>
			<p><%= link_to '전체 리스트 가기',posts_path %></p>
			<hr />
			<h2>Comments</h2>
				<%= render @post.comments %>
			<h2>Add a comment:</h2>
			<%= render 'comments/form' %>
		</div>
		<div class="col-md-1">
		</div>
</div>
