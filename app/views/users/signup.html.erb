<div class="container">
	<% if !flash[:alert].nil? %>
	<div class="alert alert-danger"><%= flash[:alert] %></div>
	<% end %>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4 text-center">
		
			<h3 class="form-heading">회원 가입</h3>
			<h3> </h3>
			<%= form_for @user, url:{action: 'signup_complete'} do |f| %>
			<p><%= f.text_field :username, placeholder: "아이디",class: "form-control" %></p>
			<p><%= f.password_field :password, placeholder: "비밀번호", class: "form-control" %></p>
			<p><%= f.password_field :retype_password, placeholder: "비밀번호확인", class: "form-control" %></p>
			<p><%= f.submit "가입하기", class: "btn btn-lg btn-block" %>
			<% end %>	
		</div>
		<div class="col-md-4">
		</div>
	</div>
</div>
